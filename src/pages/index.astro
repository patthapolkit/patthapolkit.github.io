    flex-direction: column;
    margin: auto;
    width: 100%;
    max-width: 800px;
    gap: 1.25rem;
  }
  @media screen and (min-width: 768px) {
    main section img {
      margin: 0 0 -2.5rem auto;
    }
    p {
